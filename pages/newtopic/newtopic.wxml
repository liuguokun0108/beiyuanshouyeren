<view class="user">

<!-- 用户头像  -->
  <image src="{{userinfo.avatarUrl}}" class="photo"></image>
  <text style="font-weight:bold;font-size:15px;" class="username">{{userinfo.nickName}}</text>
</view>
<!-- 发布内容框 -->
<form bindsubmit="submit">
  <view style="border:1px solid"class="content">
  <textarea maxlength="300" placeholder="发布内容" name="topic" auto-focus="ture" adjust-position="false" show-confirm-bar="false" >
  </textarea>
  </view>
<!-- 发布按钮 -->
<view class="allbuttun">
  <view class="button" >
  <button form-type="submit" type="primary" size="mini" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">点击发布</button>
  </view>
</view>
</form>

