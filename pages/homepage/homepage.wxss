/* 设置两个标题按钮 */
.a{
  display:flex;
  height: 80rpx;
  margin-top: 60rpx;
}
/* 设置按钮与下面列表的间距 */
.b{
  height: 50rpx;
}
/* 对列表进行间距设置 */
.topic{
  display: flex;
}
/* 对用户头像进行设置 */
.head{
  display: flex;
  height: 140rpx;
  width: 140rpx;
}
/* 对列表中的内容进行设置 */
 .details{
  display: flex;
  flex-direction: column;
  width: 720rpx;
} 
/* 给列表中除头像之外的内容进行宽度赋值 */
.c{
  display: flex;
  width: 100%;
  margin-left: 2cm;
}
.image {
  width: 130rpx;
  height: 130rpx;
  margin: 0 auto;
  display: block;
  margin-top: 1px;
 border-radius: 50%;
}

.name {
  text-align: center;
  padding-top:20rpx;
}

/*给文本限制字数限制，剩下的省略号代替*/
.text{
  width: 700rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  margin-left: -20px;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;

}

.nav-default{
  width: auto;
  padding: 0 0.75em;
  line-height: 2;
  font-size: 16px;
  border-radius: 4px;
  font-weight: 700;
  display: inline-block;
  position: relative;
  color: #353535;
  border: 1px solid #353535;
  background-color: transparent;
  box-sizing: border-box;
  text-align: center;
  text-decoration: none;
  overflow: hidden;
  margin-left: 125rpx;
}
